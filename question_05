#include <stdio.h>
#include <unistd.h>
#include <stdlib.h>
#include <sys/wait.h>
#include <sys/types.h>

int main(int argc, char *argv[]) {
    printf("Parent (PID %d) started here \n", getpid());
    fflush(stdout);

    int n = atoi(argv[1]);

    for (int i = 0; i < n; i++) {
        pid_t pid = fork();

        if (pid == 0) {
            printf("\nChild name : %s , Child ID : %d, Parent ID : %d \n", argv[i + 2], getpid(), getppid());
            fflush(stdout);  //prevent from bufffering
            sleep(20);
            exit(EXIT_SUCCESS);
        }
    }

    for (int i = 0; i < n; i++) {
        wait(NULL);
    }

    return 0;
}
