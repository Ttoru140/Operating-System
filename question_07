#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/wait.h>


int global_var = 10; 


int main() {
   int local_var = 20; 


   printf("Before fork:\n");
   printf("Parent - global = %d, local = %d\n", global_var, local_var);


   pid_t pid = fork(); 


   if (pid == 0) {
      
       global_var += 5;
       local_var += 5;
       printf("\n[Child] PID = %d\n", getpid());
       printf("Child - global = %d, local = %d\n", global_var, local_var);
       exit(0); 
   } else {
      
       wait(NULL); 
       printf("\n[Parent] PID = %d\n", getpid());
       printf("Parent - global = %d, local = %d\n", global_var, local_var);
   }


   return 0;
}
